<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.main.RoomMainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#1D2129"
        app:layout_constraintTop_toTopOf="parent" />

    <com.volcengine.vertcdemo.videocall.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.volcengine.vertcdemo.videocall.view.UserListPagerLayout
        android:id="@+id/user_list_pager_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_view"
        app:layout_constraintTop_toBottomOf="@id/title_view" />

    <com.volcengine.vertcdemo.videocall.view.BottomOptionGroup
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.volcengine.vertcdemo.videocall.view.PortraitLayout
        android:id="@+id/portrait_screen_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_view"
        app:layout_constraintTop_toBottomOf="@id/title_view" />

</androidx.constraintlayout.widget.ConstraintLayout>